{
	"name": "boilerplate-angular",
	"version": "0.0.1",
	"author": "Youssef Ben Sadik",
	"scripts": {
		"ng": "ng",
		"start": "bun ./scripts.ts && ng serve",
		"build": "bun ./scripts.ts && ng build",
		"watch": "bun ./scripts.ts && ng build --watch --configuration development",
		"test": "bun ./scripts.ts && jest",
		"serve:ssr:boilerplate-angular": "bun ./scripts.ts && node dist/boilerplate-angular/server/server.mjs",
		"lint": "bun ./scripts.ts && ng lint"
	},
	"jest": {
		"preset": "jest-preset-angular",
		"setupFilesAfterEnv": [
			"<rootDir>/src/common/testing/setup-jest.ts"
		]
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^19.2.1",
		"@angular/cdk": "19.2.3",
		"@angular/common": "^19.2.1",
		"@angular/compiler": "^19.2.1",
		"@angular/core": "^19.2.1",
		"@angular/forms": "^19.2.1",
		"@angular/material": "19.2.3",
		"@angular/platform-browser": "^19.2.1",
		"@angular/platform-browser-dynamic": "^19.2.1",
		"@angular/platform-server": "^19.2.1",
		"@angular/router": "^19.2.1",
		"@angular/ssr": "^19.2.1",
		"@ngx-translate/core": "^15.0.0",
		"@ngx-translate/http-loader": "^8.0.0",
		"@tailwindcss/postcss": "^4.0.14",
		"express": "^4.18.2",
		"ngx-logger": "^5.0.12",
		"postcss": "^8.5.3",
		"rxjs": "~7.8.0",
		"tailwindcss": "^4.0.14",
		"tslib": "^2.3.0",
		"zod": "^3.23.8",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^19.2.1",
		"@angular/cli": "^19.2.1",
		"@angular/compiler-cli": "^19.2.1",
		"@eslint/js": "^9.12.0",
		"@testing-library/angular": "^17.3.6",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.2.5",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.14",
		"@types/node": "^18.18.0",
		"angular-eslint": "19.2.1",
		"autoprefixer": "^10.4.20",
		"bun": "^1.2.5",
		"eslint": "^9.9.1",
		"jest": "^29.7.0",
		"jest-preset-angular": "^14.5.3",
		"ts-node": "^10.9.2",
		"typescript": "~5.8.2",
		"typescript-eslint": "8.2.0"
	}
}
